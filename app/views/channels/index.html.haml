%h1
  = Channel.model_name.human
  .btn-group.pull-right
    %a.btn{href: new_channel_path} Add

%table.table.table-bordered.table-striped
  %thead
    %tr
      %th= Channel.human_attribute_name :id
      %th= Channel.human_attribute_name :title
      %th= Channel.human_attribute_name :description
      %th= Channel.human_attribute_name :image
      %th= Channel.human_attribute_name :feed
  %tbody
    - @channels.each do |channel|
      %tr
        %td
          %a{href: channel_path(channel)}= "##{channel.id}"
        %td= channel.title
        %td= channel.description
        %td= channel.image
        %td= link_to "Feed", channel_feed_url(channel, auth_token: current_user.authentication_token)
